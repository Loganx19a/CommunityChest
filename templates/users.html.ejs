<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Users - Community Chest</title>
  <link rel="stylesheet" href="/site.css">
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    th, td {
      padding: 10px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #f2f2f2;
    }

    tr:hover {
      background-color: #f5f5f5;
    }

    .admin {
      color: green;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <header>
    <nav>
      <div class="logo">
        <h1>MHK Community Chest</h1>
      </div>
      <div class="nav-links">
        <% if (locals.user) { %>
          <span>Welcome, <%= user.name %></span>
          <a href="/">Home</a>
          <a href="/users">Manage Users</a>
          <a href="/box-locations/new">Add Box</a>
          <a href="/logout">Logout</a>
        <% } else { %>
          <a href="/login">Login</a>
          <a href="/signup">Sign Up</a>
        <% } %>
      </div>
    </nav>
  </header>

  <main>
    <h2>Users</h2>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>Name</th>
          <th>Admin</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.email %></td>
            <td><%= user.name %></td>
            <td class="<%= user.admin ? 'admin' : '' %>">
              <%= user.admin ? 'Yes' : 'No' %>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </main>
</body>
</html>